<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context=".activities.ParentScreenActivity">
    <android.support.design.widget.BottomNavigationView android:id="@+id/parent_screen_navigation"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        app:menu="@menu/parent_screen_navigation"/>

    <FrameLayout android:id="@+id/parent_screen_fragment_container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@id/parent_screen_navigation"/>
</RelativeLayout>